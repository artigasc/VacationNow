@using GoTourWeb.Helpers

@{ 
    string vLanguage = ViewData["LanguageInitialDefault"].ToString();
}
<!-- footer -->
<footer>
    <!-- section footer -->
    <div class="container-fluid bg-orange">
        <div class=" footer-section py-4">
            <div class="row  align-items-center justify-content-center ">
                <div class="col-md-4">
                    <div class="logo-footer text-center">
                        <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logofooter.svg" width="200" alt="GoTour"></a>
                    </div>
                </div>
                <div class="col-md-4 offset-md-4 ">
                    <div class="social-media-footer text-center text-md-left pt-4 pt-md-0">
                        <p>@Language.GetTextView("Index", "social_footer", vLanguage)</p>
                        <ul class="">
                            <li> <a href=""> <i class="fab fa-facebook-f"></i></a></li>
                            <li> <a href=""> <i class="fab fa-instagram"></i></a></li>
                            <li> <a href=""> <i class="fab fa-youtube"></i></a></li>
                            <li>  <a href=""> <i class="fab fa-twitter"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end section footer -->
    <!-- footer copyright -->
    <div class="footer-copy bg-purple py-3">
        <p class="m-0 text-center">&copy; 2019 <a href="#">Go Tours</a>. @Language.GetTextView("Index", "copyright", vLanguage)</p>
    </div>
    <!-- end footer copyright -->
</footer>
<!-- end footer -->
